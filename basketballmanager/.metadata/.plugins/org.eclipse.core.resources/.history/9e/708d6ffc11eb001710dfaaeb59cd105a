package Basketballmanager.player;

public class player {
	//attribute measure the condition of player
	public final String name;
	public final static int list_number=14;
	public int attribute[];
	
	public int energy;
	
	player(String Name, int a[])
	{
		//initial player information
		name=Name;
		for(int i=0;i<list_number;i++)
		speed=a[0];
		strength=a[1];
		score=a[2];
		assist=a[3];
		rebound=a[4];
		enthusiam=a[5];
		defense=a[6];
		offense=a[7];
		block=a[8];
		steal=a[9];
		turnover=a[10];
		focus=a[11];
		shooter=a[12];
		max_energy=a[13];
	}
}
